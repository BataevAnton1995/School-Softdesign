<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cardView"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardBackgroundColor="#FFFFFF"
    >
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp">


    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:src="@drawable/tool_avatart"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_larger"
        android:layout_marginStart="@dimen/spacing_larger"
        android:orientation="vertical"
        android:paddingEnd="@dimen/spacing_larger"
        android:paddingRight="@dimen/spacing_larger">

        <TextView
            android:id="@+id/full_name"
            style="@style/font.medium"
            android:text="full_name"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/text_name_teams"
            style="@style/font.regular"
            android:textAlignment="viewStart" />

    </LinearLayout>




</RelativeLayout>
</android.support.v7.widget.CardView>